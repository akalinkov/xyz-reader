<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin"
    android:layout_marginLeft="@dimen/list_item_margin"
    android:layout_marginRight="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_thumbnail_height"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="bottom"
                android:background="@drawable/photo_background_protection" />

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:minHeight="@dimen/list_item_title_min_height"
                android:paddingLeft="@dimen/list_item_horizontal_padding"
                android:paddingRight="@dimen/list_item_horizontal_padding"
                android:paddingBottom="@dimen/list_item_vertical_padding"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/list_item_title_text_size" />

        </FrameLayout>

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_item_subtitle_min_height"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingLeft="@dimen/list_item_horizontal_padding"
            android:paddingRight="@dimen/list_item_horizontal_padding"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/list_item_subtitle_text_size"
            android:gravity="top"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
